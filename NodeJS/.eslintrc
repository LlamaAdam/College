{
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "comma-dangle": ["error", "only-multiline"],
        "no-cond-assign": ["error", "always"],
        "no-console": "off",
        "no-undef": "off"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "allowImportExportEverywhere": true
      },
    "env": {
        "es6": true,
        "amd": true
    }
}